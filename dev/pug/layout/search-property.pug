.search 
    .d-flex 
        label 
            input.checkbox(type="radio" name="radio" checked)
            span.tab КУПИТЬ
        label 
            input.checkbox(type="radio" name="radio")
            span.tab СНЯТЬ

    form 
        .flex-wrap.justify-content-between 
            .form-col
                .relative
                    input(type="text" placeholder="Город, адрес, метро, район  или ЖК")
                    button.btn-reset(type="reset")
                        +icon("reset", "c-gray")
            .form-col
                .select.stopPropagation
                    .select-item 
                        span Квартира
                        +icon("arrow-down")
                    .select-drop  
                        ul.select-menu 
                            li.select-option.active Квартира
                            li.select-option Комната
                            li.select-option Дом
            .form-col
                .select.stopPropagation
                    .select-item 
                        span 1-комн.
                        +icon("arrow-down")
                    .select-drop
                        ul.select-menu 
                            li.select-option.active 1-комн.
                            li.select-option 2-комн.
                            li.select-option 3-комн.
            .form-col
                .relative.form-price
                    input(type="text" placeholder="65 732 269")
            .btns
                button.btn-morefilter.mb-20(type="button" data-btn-popup="popup-filter") ЕЩЕ ФИЛЬТРЫ
                    +icon("arrow-down")
                button.btn.mb-20.ml-md-20(type="submit") НАЙТИ

.popup(data-popup="popup-filter")
    .popup-container.stopPropagation 
        .popup-head.flex-center-between
            p.popup-title Все фильтры
            button.btn-close(type="button")
                +icon("close")
        .popup-body 
            .popup-body_row 
                .col 
                    p.text1.mb-15 Тип недвижимости
                    .select.stopPropagation
                        .select-item 
                            span
                                span.c-gray Не выбрано
                            +icon("arrow-down")
                        .select-drop
                            ul.select-menu 
                                each val, index in ['Квартира', 'Дома']
                                    li.select-option(class=index==0?'active':'')=val
                                
                .col
                    p.text1.mb-15 Этажность Дома
                    .grid-halfs
                        input(type="text" placeholder="От")
                        input(type="text" placeholder="До")
                .col
                    p.text1.mb-15 Год постройки дома
                    .grid-halfs
                        .unit(data-unit="г.")
                            input(type="text" placeholder="От")
                        .unit(data-unit="г.")
                            input(type="text" placeholder="До")
                .col
                    p.text1.mb-15 Общая площадь
                    .grid-halfs
                        .unit(data-unit="м²")

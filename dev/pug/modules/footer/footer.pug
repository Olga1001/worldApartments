footer.footer
    .container 
        .flex-center-between 
            h2.title2 Недвижимость 
                span.text-nowrap по всей 
                | России
            a.link(href="#") Смотреть 
                span.d-sm-inline.d-none полный список
                span.d-sm-none все
        .footer-row.d-flex
            ul.footer-col 
                each val in ['Новокузнецк','Тверь','Новороссийск','Казань','Саратов']
                    li  
                        a(href="#")=val
            ul.footer-col 
                each val in ['Прокопьевск','Санкт-Петербург','Сургут','Брянск','Смоленск']
                    li  
                        a(href="#")=val
            ul.footer-col 
                each val in ['Великий Новгород','Калуга','Нижний Новгород','Тамбов','Владимир']
                    li  
                        a(href="#")=val
            ul.footer-col 
                each val in ['Курск','Вологда','Кострома','Тверь','Орел']
                    li  
                        a(href="#")=val
            ul.footer-col 
                each val in ['Саранск','Липецк','Воронеж','Тула','Рязань']
                    li  
                        a(href="#")=val
        .footer-bottom
            .footer-bottom_t_row
                ul.flex-wrap.justify-content-center.footer_m
                    each val, index in ['ПРОДАЖА','АРЕНДА','НОВОСТРОЙКИ','ИПОТЕКА','ЦЕНЫ','ЖУРНАЛ']
                        li.mb-20.footer_m-item
                            a.fw-bold.c-gray(href="#")=val
                .justify-content-mmd-between.justify-content-center
                    ul.socials.flex-wrap
                        each val in ['viber','youtube','twitter','telegram','instagram','facebook']
                            li.mb-20 
                                a(href="#") 
                                    +icon(val,"social c-gray")
                    
                    a.d-lg-none.d-mmd-block.d-none.link2.ml-30(href="#") Конфиденциальность
                    
            .flex-center-between.flex-wrap.flex-mmd-row.flex-column-reverse 
                p.c-gray.footer-license © ООО «Мир квартир», 2008 — 2021
                .align-items-sm-center.text-center
                    a.link2.mb-15(href="#") Условия использования
                    a.d-lg-block.d-mmd-none.link2.ml-sm-30(href="#") Конфиденциальность
